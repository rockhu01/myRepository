<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hu.mm.dao.DictDao">
    
    <!--获取城市列表 List<Dict> findListByType();-->
    <select id="findListByType" resultMap="findListByTypeMapId">
        select id,
               data_value
        from t_dict where data_type = 0
    </select>
    <resultMap id="findListByTypeMapId" type="Dict">
        <id column="id" property="id"/>
        <result column="data_value" property="dataValue"/>
        <collection property="subList" ofType="Dict" select="com.hu.mm.dao.DictDao.findListById" column="id" />
    </resultMap>

    <!--关联查询对应的二级城市信息 List<Dict> findListById(int dictId);-->
     <select id="findListById" parameterType="int" resultType="Dict">
         select id,
                data_value dataValue
         from t_dict where pid = #{cityId}
     </select>


</mapper>
