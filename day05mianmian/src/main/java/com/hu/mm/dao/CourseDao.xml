<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hu.mm.dao.CourseDao">


    <!--分页查询数据库 List<Course> findListByPage(QueryPageBean pageBean);-->
    <select id="findCourseList" parameterType="QueryPageBean" resultType="Course">
        select  (select count(*) from t_catalog where t_catalog.course_id = t_course.id ) catalogQty,
                create_date createDate,
                (select username from t_user where t_user.id = t_course.user_id) creator,
                id,
                is_show isShow ,
                name,
                (select count(*) from t_question where t_question.course_id=t_course.id) questionQty,
                (select count(*) from t_tag where t_tag.course_id = t_course.id) tagQty
        from t_course
        <where>
            <if test="queryParams!= null and queryParams.name!=null and queryParams.name.length>0">
                and name like "%"#{queryParams.name}"%"
            </if>
            <if test="queryParams!= null and queryParams.status!= null">
                and is_show = #{queryParams.status}
            </if>
        </where>
        limit #{offset},#{pageSize}

    </select>

    <!--分页查询获得课程总数量  Long finTotalCourse(QueryPageBean pageBean);-->
    <select id="finTotalCourse" parameterType="QueryPageBean" resultType="Long">
        select count(*) from t_course
    </select>

    <!-- 新增学科  void addCourse(Course course);-->
    <select id="addCourse" parameterType="Course">
        insert into t_course (name,create_date,is_show,user_id) values (#{name},#{createDate},#{isShow},#{userId})
    </select>

    <!--更新学科 void updateCourseById(Course course);-->
    <update id="updateCourseById" parameterType="Course" >
        update t_course set name=#{name},is_show = #{isShow} where t_course.id = #{id}
    </update>

    <!--删除学科 void deleteCourseById(int courseId);-->
    <delete id="deleteCourseById"  parameterType="int">
        delete from t_course where id = #{courseId}
    </delete>

    <!-- 获取学科列表  List<Course> findALLCourse();-->
    <select id="findAll" resultType="Course">
        select id,name
        from t_course
    </select>

    <!-- 获取学科列表以及对应的目录和标签列表  List<Course> findListAll();-->
    <select id="finListAll" resultMap="courseListMapId">
        select id,name from t_course
    </select>

    <resultMap id="courseListMapId" type="Course">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <collection property="catalogList" ofType="Catalog" column="id" select="com.hu.mm.dao.CatalogDao.selectByCourseId"/>
        <collection property="tagList" ofType="Tag" column="id" select="com.hu.mm.dao.TagDao.selectByCourseId"/>

    </resultMap>

</mapper>
