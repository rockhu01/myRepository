<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hu.mm.dao.RoleDao">
   <!-- 根据用户id 获得角色列表  List<Role> selectRoleListByUserId(Integer id););-->
    <select id="selectRoleListByUserId" parameterType="Integer" resultType="Role">
        select *
        from t_role where t_role.id in (select role_id from tr_user_role where tr_user_role.user_id = #{userId});
    </select>

</mapper>
