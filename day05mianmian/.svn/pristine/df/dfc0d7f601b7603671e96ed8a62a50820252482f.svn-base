<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hu.mm.dao.QuestionItemDao">
<!-- 新增题目选项 public void add(QuestionItem questionItem);-->
    <insert id="add" parameterType="QuestionItem">
        INSERT INTO t_question_item (content, img_url, is_right, question_id)
        VALUES (#{content},#{imgUrl},#{isRight},#{questionId})
    </insert>
<!--  更新题目选项  public void update(QuestionItem questionItem);-->
    <update id="update" parameterType="QuestionItem">
        UPDATE t_question_item
        SET content = #{content},img_url=#{imgUrl},is_right=#{isRight},question_id=#{questionId}
        WHERE id=#{id}
    </update>


</mapper>
